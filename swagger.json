{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Recipe API"
  },
  "servers": [
    {
      "url": "https://morning-gorge-75139.herokuapp.com/"
    }
  ],
  "components": {
     "schemas": {
       "user": {
          "type": "object",
          "properties": {
            "_id": { "type": "string" },
            "username": { "type": "string" },
             "age": { "type": "number" },
             "bio": { "type": "string" }
          }
       },
       "recipes": {
          "type": "object",
          "properties": {
            "_id": { "type": "string" },
            "title": { "type": "string" },
            "contributorId": {
            "$ref": "#/components/schemas/user"
          }
          }
       }
     }
  },
  "paths": {
    "/users/signup": {
      "post": {
        "summary": "Register new user",
        "tags": ["Users"],
        "requestBody": {
          "description": "Created User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "gordonramsay",
                  "password": "1234"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": {
                    "message": "User created successfully"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "example": {
                    "errors": {
                      "message": "Bad Request"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/signin": {
      "post": {
        "summary": "User login",
        "tags": ["Users"],
        "requestBody": {
          "description": "Created user object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "vikaskhanna",
                  "password": "1234"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "ok",
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjViNTE1MWYyYzFmNjhkMTI1MmJkMmVlNSIsImlhdCI6MTUzNTAzNzY1MX0.5lHcf9dk7dEz1rbRDo3iAnGHsnGN7QGU8cCSSzBB4jA"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request; Request body invalid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "errors": {
                          "message": "Bad Request"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized; Login authentication failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "errors": {
                          "message": "Unauthorized"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get all users",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "username": {
                        "type": "string"
                      },
                      "age": {
                        "type": "number"
                      },
                      "bio": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "_id": "5b5151f2c1f68d1252bd2ee3",
                      "username": "vikaskhanna",
                      "age": 46,
                      "bio": "Vikas Khanna is an Indian American chef, restaurateur, and cookbook writer, filmmaker, humanitarian and the judge of MasterChef India Season 2, 3, 4, 5 and Masterchef Junior. He is based in New York "
                    },
                    {
                      "_id": "5b5151f2c1f68d1252bd2ee5",
                      "username": "gordonramsay",
                      "age": 51,
                      "bio": "Gordon James Ramsay Jr. is a British chef, restaurateur, and television personality. Born in Scotland, Ramsay grew up in Stratford-upon-Avon. His restaurants have been awarded 16 Michelin stars in total. His signature restaurant, Restaurant Gordon Ramsay in Chelsea, London, has held three Michelin stars since 2001 "
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
      "/recipes": {
      "get": {
        "summary": "Get all recipes",
        "tags": ["Recipes"],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "contributorId": {
                        "type": "object",
                        "properties": {
                            "_id": { "type": "string" },
                            "username": { "type": "string" },
                            "age": { "type": "number" },
                            "bio": { "type": "string" }
                            }
                      }
                    }
                  },
                  "example": [
                    {
                        "_id": "5b5151f3c1f68d1252bd2eeb",
                        "title": "Palak Paneer",
                        "contributorId": {
                          "_id": "5b5151f2c1f68d1252bd2ee3",
                          "username": "vikaskhanna",
                          "age": 46,
                          "bio": "Vikas Khanna is an Indian American chef, restaurateur, and cookbook writer, filmmaker, humanitarian and the judge of MasterChef India Season 2, 3, 4, 5 and Masterchef Junior. He is based in New York "
                        },
                        "comments": [
                          {
                            "_id": "5b5151f3c1f68d1252bd2eed",
                            "body": "very healthy recipe",
                            "date": "2018-12-07T16:00:00.000Z"
                          },
                          {
                            "_id": "5b5151f3c1f68d1252bd2eec",
                            "body": "add more recipes",
                            "date": "2018-12-08T16:00:00.000Z"
                          }
                        ],
                        "ingredients": [
                          {
                            "_id": "5b5151f3c1f68d1252bd2eef",
                            "quantity": "1 cup",
                            "name": "spinach"
                          },
                          {
                            "_id": "5b5151f3c1f68d1252bd2eee",
                            "quantity": "2 cups",
                            "name": "paneer"
                          }
                            ],
                            "__v": 0
                        }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
         "summary": "Add a new recipes",
        "tags": ["Recipes"],
         "requestBody": {
          "description": "Created User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "contributorId": {
                    "type": "string"
                  },
                  "comments": {
                    "type": "array",
                    "items":{
                      "type":"object"
                    }
                  },
                  "ingredients": {
                    "type": "array",
                    "items":{
                      "type":"object"
                    }
                  }
                },
                "example": {
                  "title": "fruit cocktail custard",
                  "contributorId": "5b5151f2c1f68d1252bd2ee3",
                  "comments":[{"body":"very good recipe","date":"12-08-18"},{"body":"add more recipes","date":"12-09-18"}],
                  "ingredients":[{"quantity":"1 cup","name":"fruits"},
                {"quantity":"1 cup","name":"milk"}]
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": {
                    "user": {
                      "message": "Recipe added successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "example": {
                    "errors": {
                      "message": "Bad Request"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/recipes/{recipeId}":{
      "put": {
        "summary": "Update a recipe  for a signed-in user",
        "tags": [
          "Recipes"
        ],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "required": true,
            "description": "id of the user's recipe to be updated",
            "schema": {
              "type": "string"
            }
          }
          ],
          "responses": {
            "204": {
              "description": "new ticker under the user's watchlist"
            }
          }
      }
    }
  }
}
