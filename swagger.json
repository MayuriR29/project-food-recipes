{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Recipe API"
  },
  "servers": [
    {
      "url": "https://morning-gorge-75139.herokuapp.com/"
    }
  ],
  "paths": {
    "/signup": {
      "post": {
        "summary": "Register new user",
        "tags": [
          "/signup"
        ],
        "requestBody": {
          "description": "Created User Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "gordonramsay",
                  "password": "1234"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "_id": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "salt": {
                      "type": "string"
                    },
                    "hash": {
                      "type": "string"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "user": {
                      "_id": "5b5151f2c1f68d1252bd2ee5",
                      "username": "gordonramsay",
                      "createdAt": "2018-07-20T03:07:31.056Z",
                      "updatedAt": "2018-07-20T03:07:31.056Z",
                      "__v": 0
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "example": {
                    "errors": {
                      "message": "Bad Request"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
        "/signin": {
      "post": {
        "summary": "User login",
        "tags": [
          "/signin"
        ],
        "requestBody": {
          "description": "Created user object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "vikaskhanna",
                  "password": "1234"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "ok",
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjViNTE1MWYyYzFmNjhkMTI1MmJkMmVlNSIsImlhdCI6MTUzNTAzNzY1MX0.5lHcf9dk7dEz1rbRDo3iAnGHsnGN7QGU8cCSSzBB4jA"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request; Request body invalid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "errors": {
                          "message": "Bad Request"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized; Login authentication failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      },
                      "example": {
                        "errors": {
                          "message": "Unauthorized"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
